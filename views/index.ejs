<!--including the header -->
<% include partials/header %>

    <div class="ui container main text segment"
        <div class="ui huge header">
            <h1>Here are the list of all the blogs </h1>
            <p>a RESTful App</p>

    <div class="ui top attached segment">
        <div class="ui divided items">
            <% blogs.forEach(function(blog){ %>
                <div class="item">
                        <div class=" image"> 
                            <img src="<%= blog.image %>">
                        </div>
                        
                        <div class="content">
                            <a href="/blogs/<%= blog._id %>"><%=blog.title %></a>
                                <div class="meta">
                                    <p><%=blog.date.toDateString() %> </p>
                                </div>
                                <div class="description">
                                    <% if (typeof blog.body == 'undefined' ) { %>
                                         <p> <%- blog.body %>...</p>   
                                    <% } else { %>
                                        <p> <%- blog.body.substring(0, 100) %>...</p>  
                                    <% } %>
                                </div>
                                
                                <div class="extra">
                                        <a href="/blogs/<%= blog._id %>"><button class="ui primary blue button">More Info</button></a> 
                                        <a href="/blogs/<%= blog._id %>/edit"><button class="ui primary blue button">Edit Info</button></a> 
                                </div>
                        </div>
                </div>
                 <% }) %>
        </div>
    </div>
</div>
<% include partials/footer %>